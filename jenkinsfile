pipeline {
    agent any
    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/your-username/2-tier-devops-project.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t 2tier-app .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}

